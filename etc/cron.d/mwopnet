0    1,4,7,10,13,16,19,22 *   *   * www-data cd %release_path% ; php vendor/bin/phly-comic.php fetch-all -p --output data/comics.phtml --exclude nih --exclude reptilis-rex --exclude dilbert | /usr/bin/logger -t MWOPNET

